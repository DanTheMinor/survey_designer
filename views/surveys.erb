<% if @surveys.any? %>
  <h2> Here are all your surveys</h2>

  <ul>
  <% @surveys.each() do |survey| %>
      <li><a href="/surveys/<%= survey.id() %>"><%= survey.title %></a>
        <br><a href="/surveys/<%= survey.id() %>/edit">Update this survey</a></li>
    <% end %>
  </ul>
<% else %>
  <h2> You currently have no surveys!</h2>
<% end %>

<h3>Add a New Survey</h3>

<form action="/surveys" method="post">
  <label for="title">Survey title</label>
  <input id="title" name="title" type="text">
  <button type="submit">Add Survey</button>
</form>
